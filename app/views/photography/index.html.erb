<% if session[:current_user_id]
     user = User.find(session[:current_user_id]) %>
    <div class="row-fluid">
        <div class="span12">
            <div class="titleBox">
                <h1 class="huge"><%= user.nombre_usuario %> <%= user.apellido_paterno %></h1>
            </div>
        </div>
    </div>
    <!-- / row-fluid -->


    <div class="row-fluid">
        <div class="span12">
            <div class="lineBox right">
                <div class="inner">
                    <a href="/index" class="btn metaIcon" data-toggle="tooltip" title="Home"><span class="entypo home"><i></i>Home</span></a>
                    <a href="#" class="btn btn-icon left btn-primary"><span class="entypo vcard"><i></i></span> Mi perfil</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row-fluid">
        <div class="span3">
            <h3>Aquí iran las fotos</h3>
            <ul class="portfolioList col4" id="portfolio1">
            <% @photo.each do |photo| %> 
            <% usuario = User.find_by_id_usuario(photo.id_usuario) %>
                <li data-id="1" >
                    <div class="easyBox">
                        <a href="#"><img src="fotos/<%= photo.id %>.jpg" alt=" "></a>
                        <div class="inner">
                            <a href="#"><span class="entypo camera metaText"><i><%= usuario.nombre_usuario %> <%= usuario.apellido_paterno %></i></span></a>
                            <h3 class="light"><a href="#"><%= photo.titulo_fotografia%></a></h3>
                            <p><%= photo.descripcion_fotografia %></p>
                        </div>
                    </div>
                </li>
            <% end %>
            </ul>
        </div>
        <div class="span6">
            <h3>Aquí ira la ultima foto</h3>
        </div>
        <div class="span3">
            <h3>Aquí iran las fotos de amigos</h3>
        </div>
    </div>
    <!-- /row-fluid -->
<% else %>    
    <h3>ERROR: Debe iniciar sesión.</h3>
<% end %>  
<div class="row-fluid">
    <div class="span12">
        <div class="titleBox">
            <h1 class="huge">Panel de Administración</h1>
        </div>
    </div>
</div>
<!-- / row-fluid -->


<div class="row-fluid">
    <div class="span12">
        <div class="lineBox right">
            <div class="inner">
                <a href="#" class="btn metaIcon" data-toggle="tooltip" title="Home"><span class="entypo home"><i></i>Home</span></a>
                <a href="#" class="btn btn-icon left btn-primary"><span class="entypo vcard"><i></i></span>Vista Auditoria</a>
            </div>
        </div>
    </div>
</div>
<!-- / row-fluid -->


<div class="row-fluid">
    <div class="span12">
		<table>
			<tr>
				<td colspan="3"> Hora/Fecha </td>
				<td colspan="3"> <center>Acción realizada</center></td>
				<td colspan="4"> <center>Tabla</center></td>
				<td colspan="3"> <center>Campo</center></td>
				<td colspan="3"> <center>Valor Antiguo</center></td>
				<td colspan="3"> <center>Valor nuevo</center></td>
				<td colspan="3"> <center>Usuario </center></td>
				<td colspan="3"> <center>Estado Usuario</center></td>
				<td colspan="3"> <center>Bloqueo/Desbloqueo</center></td>
			</tr>
			<% @auditorys.each do |auditoria| %> 
			<tr>	
				<td colspan="3"> <%= auditoria.timestamp_auditoria%> </td>
				<% usuario = User.find(auditoria.id_usuario) %>
				<td colspan="3"> <center><%= auditoria.accion%></center> </td>
				<td colspan="4"> <center><%= auditoria.tabla%></center> </td>
				<td colspan="3"> <center><%= auditoria.campo%></center> </td>
				<td colspan="3"> <center><%= auditoria.valor_old%></center> </td>
				<td colspan="3"> <center><%= auditoria.valor_new%></center> </td>
				<td colspan="3"> <center><%= usuario.nombre_usuario %></center></td>
				<%if usuario.estado == 0 %>
					<td colspan="3"> <center>Bloqueado</center></td>
					<td><%= link_to "Desbloquear Usuario", administrador_desbloquear_path(usuario) %></td>
				<% else %>	
					<td colspan="3"> <center>Activo</center></td>
					<td><%= link_to "Bloquear Usuario", administrador_bloquear_path(usuario) %></td>
				<% end %>
			</tr>	
			<% end %>	
		</table>
    </div>
</div>
<!-- / row-fluid -->






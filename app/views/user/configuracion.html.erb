<% if session[:current_user_id]%>
<div class="row-fluid">
    <div class="span12">
        <div class="titleBox">
            <h1 class="huge">Configuración General</h1>
        </div>
    </div>
</div>
<!-- / row-fluid -->


<div class="row-fluid">
    <div class="span12">
        <div class="lineBox right">
            <div class="inner">
                <a href="/index" class="btn metaIcon" data-toggle="tooltip" title="Home"><span class="entypo home"><i></i>Home</span></a>
                <a href="#" class="btn btn-icon left btn-primary"><span class="entypo vcard"><i></i></span>Configuración</a>
            </div>
        </div>
    </div>
</div>
<!-- / row-fluid -->

<%= form_for :usuario, url:'/editar' do |f| %>
<div class="row-fluid">
    <div class="span4">
            <%= f.label :Direccion %> 
            <%= f.text_field :direccion %><br>
            <%= f.label :Colo_De_Fondo %> 
            <%= radio_button_tag :color_fondo, '4-bw', true %> default<br>
            <%= radio_button_tag :color_fondo, '1-blue' %> Blue<br>
            <%= radio_button_tag :color_fondo, '2-green' %> Green<br>
            <%= radio_button_tag :color_fondo, '3-red'  %> Red<br>
            <%= radio_button_tag :color_fondo, '5-yellow' %> Yellow
    </div> 
    <div class="span4">
            <%= f.label :Fecha_Nacimiento %> 
            <%= f.date_field :fechanacimiento %>
            <%= f.label :Tipo_De_Letra %> 
            <%= f.text_field :estilo_letra, :value => @usuario.estilo_letra %>
    </div> 
    <div class="span4">
            <%= f.label :Correo %> 
            <%= f.text_field :correo %>
            <%= f.label :Sexo %> 
            <%= radio_button_tag :sexo, 'm' %> Femenino<br>
            <%= radio_button_tag :sexo, 'h' %> Masculino<br>
            <%= radio_button_tag :sexo, 'o', true %> Otro
    </div>

</div>
<div class="row-fluid">
    <div class="span12">
        <center><%= f.submit 'Guardar Cambios' %></center>
    </div>
</div>


<% end %>


<% else %>
    <h1>No te haz identificado, favor inicia sesión para acceder.</h1>
<% end %>
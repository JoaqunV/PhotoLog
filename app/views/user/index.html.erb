<div class="row-fluid">
    <div class="span12">
        <div class="titleBox">
            <h1 class="huge">Nuestros Usuarios</h1>
        </div>
    </div>
</div>
<!-- / row-fluid -->


<div class="row-fluid">
    <div class="span12">
        <div class="lineBox right">
            <div class="inner">
                <a href="/index" class="btn metaIcon" data-toggle="tooltip" title="Home"><span class="entypo home"><i></i>Home</span></a>
                <a href="#" class="btn btn-icon left btn-primary"><span class="entypo vcard"><i></i></span> Usuarios de Photolog</a>
            </div>
        </div>
    </div>
</div>

<div class="row-fluid">
    <div class="span12">
        <ul class="portfolioList col4" id="portfolio1">
        <% @users.each do |user| %> 
            <li data-id="1" >
                <div class="easyBox">
                    <a href="#"><%= image_tag "usuarios/#{user.id_usuario}.png" %></a>
                    <div class="inner">
                        <a href="#"><span class="entypo camera metaText"><i><%= user.nombre_usuario %> <%= user.apellido_paterno %> <%= user.apellido_materno %></i></span></a>
                        <h3 class="light"><a href="#"><%= user.nombre_acceso%></a></h3>
                        <p>Cantidad de Amigos: <%= user.cantidad_amigos %></p>
                        <p>Cantidad de Photos: <%= user.cantidad_fotos %></p>
                    </div>
                </div>
            </li>
        <% end %>
        </ul>
    </div>
</div>
<!-- /row-fluid -->